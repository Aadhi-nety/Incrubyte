generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
  role      Role     @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Sweet {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  category  String
  price     Float
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}
